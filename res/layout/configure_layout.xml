<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView android:id="@+id/stream_label"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/all_volume_title" />

    <RadioGroup android:id="@+id/stream_selection"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

      <RadioButton android:id="@+id/stream_ringtone"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/ring_volume_title" />
      <RadioButton android:id="@+id/stream_media"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/media_volume_title" />
      <RadioButton android:id="@+id/stream_alarm"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/alarm_volume_title" />
      <RadioButton android:id="@+id/stream_notification"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/notification_volume_title" />
    </RadioGroup>


    <View android:layout_width="fill_parent"
          android:padding="5dp"
          android:layout_height="1dp"
          android:background="#33ffffff"
          android:layout_marginBottom="5dp"/>

    <TextView android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:text="@string/prefs_background_color"/>

    <LinearLayout android:background="#ffffffff"
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:padding="5dp"
	          android:layout_marginLeft="5dp"
	          android:layout_marginRight="5dp"
	          android:orientation="vertical">

      <View android:id="@+id/current_background_color"
	    android:layout_width="fill_parent"
	    android:layout_height="48dp"
	    android:background="#CC333333"/>

    </LinearLayout>

    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/prefs_background_color_button"
            android:padding="15dp"
            android:paddingTop="5dp"
            android:onClick="OnBackgroundColorClick"/>

    <View android:layout_width="fill_parent"
          android:padding="5dp"
          android:layout_height="1dp"
          android:background="#33ffffff"/>

    <View android:layout_width="fill_parent"
          android:layout_height="0dp"
          android:layout_weight="1.0"/>

    <Button android:id="@+id/ok_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dlg_ok" />
  </LinearLayout>
</ScrollView>
